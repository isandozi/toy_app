                //function for rollRock()
                function rollRock() {
                    
                    //change the src of playerchoice
                    document.getElementById("playerchoice").src = "2.jpg";
                    
                    //create a variable for computer selection
                    var compselect = Math.floor(Math.random() * 3) + 1;
                    
                    //change the src of computerchoice
                    document.getElementById("computerchoice").src = compselect + ".jpg";
                    
                    //add 1 to totalRock
                    totalRock++;
                    
                    //change totalRockText to value of totalRock
                    document.getElementById("totalRockText").innerHTML = totalRock;
                    
                    //add 1 to totalTies every time there is a tie
                    if ("2.jpg" == compselect + ".jpg") {
                        totalTies++;
                        document.getElementById("totalTiesText").innerHTML = totalTies;
                        document.getElementById("messageText").innerHTML = "Tie. Try Again.";
                        document.getElementById("winnerchoice").src = "2.jpg";
                        document.body.style.backgroundColor = "yellow";
                    }
                    else if ("1.jpg" == compselect + ".jpg") {
                        totalComputer++;
                        document.getElementById("computerscore").innerHTML = totalComputer;
                        document.getElementById("messageText").innerHTML = "You Lose. Play Again.";
                        document.getElementById("winnerchoice").src = "1.jpg";
                        document.body.style.backgroundColor = "red";
                        if (totalComputer > 2) {
                            $('#paper').hide();
                            $('#scissors').hide();
                            $('#rock').hide();
                            document.getElementById("messageText").innerHTML = "You Lost. Better Luck Next Time.";
                            document.body.style.backgroundColor = "red";
                            exit;
                        }
