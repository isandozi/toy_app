        <script>
                var player = prompt("Please enter your name", "Player");
                if (player != null)
                {
                    document.getElementById("playername").innerHTML = player;
                }
                else
                  document.getElementById("playername").innerHTML = "Player";
                  
                // declare global variable for totalRock
                var totalRock = new Number;
                
                // declare global variable for totalPaper
